{
  "emmet.optimizeStylesheetParsing": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.detailField": "preview",
  "signature.preferShownAbove": true,
  "suggest.enablePreview": true,
  "diagnostic.errorSign": "üï±",
  "diagnostic.warningSign": "‚ò¢",
  "diagnostic.infoSign": "ÔÅö",
  "diagnostic.hintSign": "üí°",
  "coc.preferences.messageLevel": "warning",
  "coc.preferences.formatOnType": true,
  "codeLens.enable": true,
  "suggest.maxCompleteItemCount": 30,
  "git.enableGutters": true,
  "git.addedSign.text": "‚ñé",
  "git.changedSign.text": "‚ñé",
  "git.removedSign.text": "‚ñè",
  "git.topRemovedSign.text": "‚ñî",
  "git.changeRemovedSign.text": "‚ñã",
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "eslint.autoFixOnSave": true,
  "tslint.autoFixOnSave": true,
  "scss.lint.unknownProperties": "ignore",
  "css.lint.unknownProperties": "ignore",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/cli/master/cli/compose/schema/data/config_schema_v3.9.json": "/docker-compose.*yml",
    "http://json.schemastore.org/ansible-stable-2.9": "/playbook.yml"
  },
  "yaml.format.enable": true,
  "languageserver": {
    "docker": {
      "enable": false,
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["Dockerfile"]
    },
    "ghcide": {
      "enable": false,
      "command": "ghcide",
      "args": ["--lsp"],
      "filetypes": ["hs", "lhs", "haskell"],
      "rootPatterns": [".stack.yaml", "cabal.config", "package.yaml"]
    },
    "haskell": {
      "enable": false,
      "command": "hie-wrapper",
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    },
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {}
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "markdown": "write-good",
    "sh": "shellcheck",
    "haskell": "hlint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "nix": "nixfmt",
    "haskell": "brittany"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    },
    "nixfmt": {
      "command": "nixfmt",
      "args": []
    }
  }
}
