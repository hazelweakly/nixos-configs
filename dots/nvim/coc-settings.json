{
  "emmet.optimizeStylesheetParsing": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.detailField": "preview",
  "signature.preferShownAbove": true,
  "suggest.enablePreview": true,
  "diagnostic.errorSign": "üï±",
  "diagnostic.warningSign": "‚ò¢",
  "diagnostic.infoSign": "ÔÅö",
  "diagnostic.hintSign": "üí°",
  "coc.preferences.messageLevel": "warning",
  "coc.preferences.formatOnType": true,
  "codeLens.enable": true,
  "suggest.maxCompleteItemCount": 30,
  "git.enableGutters": true,
  "git.addedSign.text": "‚ñé",
  "git.changedSign.text": "‚ñé",
  "git.removedSign.text": "‚ñè",
  "git.topRemovedSign.text": "‚ñî",
  "git.changeRemovedSign.text": "‚ñã",
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "eslint.autoFixOnSave": true,
  "tslint.autoFixOnSave": true,
  "scss.lint.unknownProperties": "ignore",
  "css.lint.unknownProperties": "ignore",
  "python.jediEnabled": false,
  "python.autoUpdateLanguageServer": false,
  "python.formatting.provider": "black",
  "python.disableInstallationCheck": true,
  "pyright.disableCompletion": true,
  "python.analysis.diagnosticMode": "workspace",
  "haskell.formattingProvider": "fourmolu",
  "yaml.schemas": {
    "https://raw.githubusercontent.com/docker/cli/master/cli/compose/schema/data/config_schema_v3.9.json": "/docker-compose.*yml",
    "http://json.schemastore.org/ansible-stable-2.9": "/playbook.yml"
  },
  "yaml.customTags": [
    "!Equals sequence",
    "!FindInMap sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!Join sequence",
    "!Ref",
    "!Select sequence",
    "!Split sequence",
    "!Sub"
  ],
  "yaml.format.enable": true,
  "languageserver": {
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {}
    },
    "dhall-lsp": {
      "command": "dhall-lsp-server",
      "args": [],
      "filetypes": ["dhall"],
      "rootPatterns": [".git", "package.dhall"],
      "initializationOptions": {}
    }
  },
  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "email": "languagetool",
    "sh": "shellcheck",
    "bzl": "buildifier",
    "docker": "hadolint",
    "haskell": "hlint"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "nix": "nixfmt",
    "bzl": "buildifier",
    "cabal": "cabal-fmt"
  },
  "diagnostic-languageserver.linters": {
    "buildifier": {
      "command": "buildifier",
      "debounce": 100,
      "args": ["-lint", "warn", "-mode", "check", "-format", "json", "%file"],
      "sourceName": "buildifier",
      "parseJson": {
        "errorsRoot": "files[0].warnings",
        "line": "start.line",
        "column": "start.column",
        "endLine": "end.line",
        "endColumn": "end.column",
        "message": "[${category}] ${message} [${url}]",
        "security": "security",
        "securities": {
          // This is abusing lodash's behavior with non existant object properties
          "": "warning"
        }
      }
    }
  },
  "diagnostic-languageserver.formatters": {
    "cabal-fmt": {
      "command": "cabal-fmt",
      "args": ["-i"]
    },
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    },
    "nixfmt": {
      "command": "nixfmt",
      "args": []
    },
    "buildifier": {
      "command": "buildifier",
      "args": []
    }
  }
}
